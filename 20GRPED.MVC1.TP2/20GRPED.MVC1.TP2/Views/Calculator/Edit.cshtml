@model _20GRPED.MVC1.TP2.Models.CalculatorModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CalculatorModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="calculatorForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Left" class="control-label"></label>
                <input asp-for="Left" class="form-control" />
                <span asp-validation-for="Left" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Right" class="control-label"></label>
                <input asp-for="Right" class="form-control" />
                <span asp-validation-for="Right" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*Múltiplos submits por form é um recurso recente*@
                <input type="submit" form="calculatorForm" asp-action="Add" value="+" class="btn btn-primary" />
                <input type="submit" form="calculatorForm" asp-action="Divide" value="/" class="btn btn-primary" />
                <input type="submit" form="calculatorForm" asp-action="Subtract" value="-" class="btn btn-primary" />
                <input type="submit" form="calculatorForm" asp-action="Multiply" value="*" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
